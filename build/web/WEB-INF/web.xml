<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>quartz:config-file</param-name>
        <param-value>quartz.properties</param-value>
    </context-param>
    <context-param>
        <param-name>quartz:shutdown-on-unload</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>quartz:wait-on-shutdown</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>quartz:start-scheduler-on-load</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>quartz:config-file</param-name>
        <param-value>/WEB-INF/quartz.properties</param-value>
    </context-param>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>Jobs.EjecutarTareas</listener-class>
    </listener>
    <servlet>
        <servlet-name>Ingreso</servlet-name>
        <servlet-class>Servlets.Ingreso</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Visualizacion</servlet-name>
        <servlet-class>Servlets.Visualizacion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Registro</servlet-name>
        <servlet-class>Servlets.Registro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Acciones</servlet-name>
        <servlet-class>Servlets.Acciones</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Pagos</servlet-name>
        <servlet-class>Servlets.Pagos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetallePago</servlet-name>
        <servlet-class>Servlets.DetallePago</servlet-class>
    </servlet>   
    <servlet>
        <servlet-name>Contratos</servlet-name>
        <servlet-class>Servlets.Contratos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InformePagosXEstado</servlet-name>
        <servlet-class>Servlets.InformePagosXEstado</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InformePagosXPeriodo</servlet-name>
        <servlet-class>Servlets.InformePagosXPeriodo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistroContrato</servlet-name>
        <servlet-class>Servlets.RegistroContrato</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ArchivoPlanoContratos</servlet-name>
        <servlet-class>Servlets.ArchivoPlanoContratos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistroOTROSI</servlet-name>
        <servlet-class>Servlets.RegistroOTROSI</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Ingreso</servlet-name>
        <url-pattern>/Ingreso</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Visualizacion</servlet-name>
        <url-pattern>/Visualizacion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registro</servlet-name>
        <url-pattern>/Registro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Acciones</servlet-name>
        <url-pattern>/Acciones</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Pagos</servlet-name>
        <url-pattern>/Pagos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetallePago</servlet-name>
        <url-pattern>/DetallePago</url-pattern>
    </servlet-mapping>    
    <servlet-mapping>
        <servlet-name>Contratos</servlet-name>
        <url-pattern>/Contratos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InformePagosXEstado</servlet-name>
        <url-pattern>/InformePagosXEstado</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InformePagosXPeriodo</servlet-name>
        <url-pattern>/InformePagosXPeriodo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistroContrato</servlet-name>
        <url-pattern>/RegistroContrato</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ArchivoPlanoContratos</servlet-name>
        <url-pattern>/ArchivoPlanoContratos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistroOTROSI</servlet-name>
        <url-pattern>/RegistroOTROSI</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            60
        </session-timeout>
    </session-config>
</web-app>
